# ===============================
# Auto Car Wash & Maintenance System
# Database Configuration - EXAMPLE
# ===============================
# Copy this file to application.properties and update with your settings

# PostgreSQL Database Configuration
spring.datasource.url=jdbc:postgresql://localhost:5432/auto_carwash_db
spring.datasource.username=your_username
spring.datasource.password=your_password
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA / Hibernate Configuration
spring.jpa.database-platform=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=true
spring.jpa.properties.hibernate.format_sql=true
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true

# ===============================
# Server Configuration
# ===============================
server.port=8080

# ===============================
# JWT Configuration
# ===============================
jwt.secret=CHANGE_THIS_TO_YOUR_OWN_SECRET_KEY_IN_PRODUCTION
jwt.expiration=86400000

# ===============================
# CORS Configuration
# ===============================
app.cors.allowed-origins=http://localhost:3000,http://localhost:3001
